<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			<ImageView android:id="@+id/tags_label"
			android:layout_width="24px" android:layout_height="24px"
			android:layout_gravity="center_vertical"
			android:src="@drawable/tag001a" />
			<view android:id="@+id/tag"
			class="org.openintents.lib.MultiWordAutoCompleteTextView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="" android:completionThreshold="1"
			android:selectAllOnFocus="true" />		
	</LinearLayout>
	<view android:id="@+id/mapview"
		class="com.google.android.maps.MapView"
		android:apiKey="myapikey"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
